<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/configure_connection_prompt"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginBottom="16dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <CheckBox
                android:id="@+id/auto_reconnect_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/auto_reconnect"
                android:checked="true"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/auto_reconnect_desc"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="16dp" />

            <CheckBox
                android:id="@+id/background_scan_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/background_scan"
                android:checked="true"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/background_scan_desc"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_marginStart="32dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/advanced_options_note"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="italic"
        android:gravity="center" />

</LinearLayout>
